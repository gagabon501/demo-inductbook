extends includes/layout 

block nav-bar
    include includes/nav
    +navigation(userlevel, activePage, userId)

block layout-content 
    .container
        form(action="/passwd" method="post").passwd.form-fill.login_container
            h4.mt-2.mb-2 Change Password
            p.text-center.text-danger.font-weight-bold #{errmsg}
            label(for="password").sr-only.form-label New password 
            input(type="password" id="password" name="password" placeholder="New password" required autofocus).form-control.mt-2
            label(for="passwordConf").sr-only.form-label Re-type Password
            input(type="password" id="passwordConf" name="passwordConf" placeholder="Re-type password" required).form-control.mt-2
            button(type="submit").btn.btn-sm.btn-primary.btn-block.mt-2 Submit
            a(href="/home" role="button").btn.btn-sm.btn-danger.btn-block.mt-2.mx-2 Cancel
