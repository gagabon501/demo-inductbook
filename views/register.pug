extends includes/layout 

block layout-content 

    
    .container-fluid.col-sm-6
        img(style="margin-top:20px;" alt="Site Safe Card"  src="/images/advertisement-businessman-hands-533444.jpg").img-fluid
        form(method='POST' action='/register')
            h2 FCC EHS Induction Booking System Registration
            if errmsg
                div(role="alert").alert.alert-danger #{errmsg}
            .form-group
                label(for='email').form-label Email:
                input(type='email' placeholder='email' name='email' required='true').form-control
            .form-group.mt-2
                label(for='name').form-label Full name:
                input(type='text', placeholder='Full name' name='name' required='true').form-control
            .row.mt-2
                .form-group.col-sm-8
                    label(for='company').form-label Company name:
                    input(type='text', placeholder='Company name' name='company').form-control
                .col-md-4
                    label(for="company_type").form-label Company type
                    select(name="company_type" aria-label="Company type").form-select#company_type
                        option(selected) Select company type
                        option(value="Internal") Company
                        option(value="External") Sub-contractor
                .form-group.form-horizontal.mt-2
                    label(for='password').form-label Password:
                    input(type='password', placeholder='password' name='password' required='true').form-control
                .form-group.mt-2
                    label(for='passwordConf').form-label Confirm password:
                    input(type='password', placeholder='re-type password' name='passwordConf' required='true').form-control
                .row.mt-2
                    .col-md-12
                        button(type='submit').btn.btn-success.btn-sm Submit
                        a(href="/logout" role="button" aria-pressed="true").btn.btn-danger.btn-sm.mx-2 Cancel
